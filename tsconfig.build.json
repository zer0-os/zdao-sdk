{
  "compilerOptions": {
    "declaration": true,
    "lib": [
      "dom",
      "dom.iterable",
      "ES2018"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "target": "ES2018",
    "sourceMap": true,
    "composite": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "lib",
    "rootDir": "src",
    "typeRoots": ["./@types", "./node_modules/@types"]
  },
  "include": [
    "src/**/*.ts","src/**/*.tsx","src/**/*.json"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "lib",
    "__mocks__",
    "__tests__",
    "coverage",
    "*.config.js",
    "*.babel.js",
    "*.test.ts",
    "specs"
  ]
}