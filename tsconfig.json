{
  "compilerOptions": {
    "declaration": true,
    "lib": [
      "dom",
      "dom.iterable",
      "ES2018"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "target": "ES2018",
    "sourceMap": true,
    "composite": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/*.ts","src/**/*.tsx","src/**/*.json",
    "test/**/*.ts","test/**/*.d.ts","test/**/*.tsx","test/**/*.json",
  ],
  "exclude": [
    "node_modules"
  ]
}